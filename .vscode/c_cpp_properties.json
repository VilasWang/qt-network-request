{
    "configurations": [
        {
            "name": "Win32-MSVC",
            "includePath": [
                "${workspaceFolder}/**",
                // MSVC 标准库路径
                "${env.VCToolsInstallDir}include",
                // Windows SDK 路径
                "${env.WindowsSdkDir}Include/${env.WindowsSDKVersion}**",
                // Qt 包含路径 - 支持环境变量
                "${env:QT_DIR}/include/**",
                "${env:QT_DIR}/include/QtCore",
                "${env:QT_DIR}/include/QtWidgets",
                "${env:QT_DIR}/include/QtNetwork",
                "${env:QT_DIR}/include/QtXml"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                // Qt 相关定义
                "QT_CORE_LIB",
                "QT_WIDGETS_LIB",
                "QT_NETWORK_LIB",
                "QT_XML_LIB"
            ],
            // VS 编译器路径 - 自动检测
            "${env:VCToolsInstallDir}bin/Hostx64/x64/cl.exe",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64",
            "windowsSdkVersion": "10.0.19041.0"
        }
    ],
    "version": 4
}